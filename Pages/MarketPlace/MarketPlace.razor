@page "/marketplace"

<Column ColumnSize="ColumnSize.Is3">
    <Select TValue="Location" SelectedValue="_selectedLocation" SelectedValueChanged="OnLocationValue_Changed">
        @foreach (var location in _systemLocations)
        {
            <SelectItem Value="@location.Name">@location.Name</SelectItem>
        }
    </Select>
</Column>

@code {
    private List<Location> _systemLocations = new();
    private Location _selectedLocation = new();

    protected override async Task OnInitializedAsync()
    {
        _systemLocations = await LocationService.GetSystemLocations();
        _selectedLocation = _systemLocations.First();
    }

    private void OnLocationValue_Changed()
    {
        Console.WriteLine($"Location changed to {_selectedLocation.Name}");
    }

}